<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Defines a variable for the log path -->
    <property name="LOGS" value="./logs" />

    <!-- Appender for logging to the console -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <!-- A standard, non-colored pattern that works everywhere -->
            <Pattern>%d{ISO8601} %-5level [%thread] %logger{36} - %msg%n</Pattern>
        </layout>
    </appender>

    <!-- Appender for logging to a rolling file -->
    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/eduplatform-backend.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{ISO8601} %-5level [%thread] %logger{36} - %msg%n</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Rollover daily -->
            <fileNamePattern>${LOGS}/archived/eduplatform-backend-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
            <!-- Total size of all archive files, if total size > 10GB, it will delete older files -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- =========================================== -->
    <!-- Configure Log Levels for Different Profiles -->
    <!-- =========================================== -->

    <!-- Development Profile: Log DEBUG messages to console and file -->
    <springProfile name="development">
        <root level="info">
            <appender-ref ref="Console" />
            <appender-ref ref="RollingFile" />
        </root>
        <logger name="com.eduplatform" level="debug" additivity="false">
            <appender-ref ref="Console" />
            <appender-ref ref="RollingFile" />
        </logger>
         <logger name="org.springframework.web" level="debug" additivity="false">
            <appender-ref ref="Console" />
        </logger>
        <logger name="org.hibernate.SQL" level="debug" additivity="false">
            <appender-ref ref="Console"/>
        </logger>
    </springProfile>

    <!-- Production Profile: Log only INFO messages to the rolling file -->
    <springProfile name="production">
        <root level="info">
            <appender-ref ref="RollingFile" />
        </root>
         <logger name="com.eduplatform" level="info" additivity="false">
            <appender-ref ref="RollingFile" />
        </logger>
    </springProfile>

</configuration>

